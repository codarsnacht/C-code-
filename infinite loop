
#include "stdafx.h"
#include "stdio.h"
//FILE *fptr;
int main()
{
//fptr =    fopen( "C://goon.txt", "w+");
    int i = 0;
    int choice;
    printf("do you want a cup of tea ?(1 for yes , 2 for no)");
    scanf_s("%d", &choice);
   
    switch (choice) {
    case 2:
        while (i > -1) {
 
            printf("go on go on go on, ");
        //  fprintf(fptr, "go on go on go on");
            i++;
 
        }
        break;
 
    case 1:
        while (i > -1) {
            printf("then go get some");
        //  fprintf(fptr, "then go get some");
            i++;
        }
        break;
 
    default:
        printf("any time now\n");
    }
    return 0;
}
